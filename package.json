{
  "name": "ai-learn",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "dev:frontend": "turbo run dev --filter=frontend...",
    "dev:backend": "turbo run dev --filter=backend...",
    "build": "turbo run build",
    "build:frontend": "turbo run build --filter=frontend...",
    "build:backend": "turbo run build --filter=backend...",
    "start": "turbo run start",
    "start:frontend": "turbo run start --filter=frontend...",
    "start:backend": "turbo run start --filter=backend...",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:frontend": "turbo run test --filter=frontend...",
    "test:backend": "turbo run test --filter=backend...",
    "test:shared": "turbo run test --filter=shared...",
    "db:generate": "npm run db:generate --workspace=backend",
    "db:migrate": "npm run db:migrate --workspace=backend",
    "db:push": "npm run db:push --workspace=backend",
    "install:all": "npm install"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.33.1",
    "@next/env": "^15.5.4"
  },
  "devDependencies": {
    "@esbuild/darwin-arm64": "^0.25.10",
    "turbo": "^2.0.6"
  },
  "packageManager": "npm@10.9.2"
}
