{
  "name": "ai-learn-backend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "echo 'Backend is a service library - use frontend dev server'",
    "build": "echo 'Backend build complete'",
    "start": "echo 'Backend is a service library - no standalone server'",
    "test": "node --experimental-vm-modules ../node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules ../node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules ../node_modules/jest/bin/jest.js --coverage",
    "db:generate": "drizzle-kit generate --config drizzle.config.cjs",
    "db:migrate": "drizzle-kit migrate --config drizzle.config.cjs",
    "db:push": "drizzle-kit push --config drizzle.config.cjs"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@neondatabase/serverless": "^1.0.1",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.5",
    "inngest": "^3.43.1",
    "uuid": "^11.1.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "drizzle-kit": "^0.31.5",
    "jest": "^29.7.0"
  }
}